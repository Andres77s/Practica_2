<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.andresvanegas.punto3.MainActivity"
    android:background="#06f5fe">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculo de Areas"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#010101"
        android:textSize="35dp"
        android:textStyle="bold" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28dp"
            android:text="Rectangulo"
            android:id="@+id/rRectangulo" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Circulo"
            android:textSize="28dp"
            android:id="@+id/rCirculo" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28dp"
            android:text="Cuadrado"
            android:id="@+id/rCuadrado" />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Base"
        android:textSize="28sp"
        android:id="@+id/tBase"
        android:layout_below="@+id/radioGroup"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Altura"
        android:textSize="28sp"
        android:id="@+id/tAltura"
        android:layout_below="@+id/tBase"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lado"
        android:textSize="28sp"
        android:id="@+id/tLado"
        android:layout_below="@+id/tAltura"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Radio"
        android:textSize="28sp"
        android:id="@+id/tRadio"
        android:layout_below="@+id/tLado"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eBase"
        android:inputType="number"
        android:layout_above="@+id/tAltura"
        android:layout_toEndOf="@+id/tAltura" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eAltura"
        android:inputType="number"
        android:layout_alignTop="@+id/tAltura"
        android:layout_alignStart="@+id/eBase" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eLado"
        android:inputType="number"
        android:layout_below="@+id/eAltura"
        android:layout_toEndOf="@+id/tRadio" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eRadio"
        android:inputType="number"
        android:layout_below="@+id/eLado"
        android:layout_alignStart="@+id/eAltura" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular Area"
        android:id="@+id/bCalcular"
        android:layout_below="@+id/eRadio"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/tArea"
        android:textSize="28sp"
        android:layout_below="@+id/bCalcular"
        android:layout_alignParentEnd="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Triangulo"
        android:textSize="28dp"
        android:id="@+id/rTriangulo"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

</RelativeLayout>
